<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/TextView02"
        android:text="@string/love"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fontsize"
        android:text="@string/fontSize"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <RadioGroup android:id="@+id/RadioGroup01"
        android:layout_below="@id/fontsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <RadioButton android:text="10"
            android:id="@+id/RadioButton01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

	    <RadioButton
	        android:id="@+id/RadioButton05"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/fontsize"
	        android:layout_marginRight="18dp"
	        android:text="30" />
	
	    <RadioButton
	        android:id="@+id/RadioButton02"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/fontsize"
	        android:layout_toRightOf="@+id/fontsize"
	        android:text="15" />
	
	    <RadioButton
	        android:id="@+id/RadioButton03"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/fontsize"
	        android:layout_centerHorizontal="true"
	        android:text="20" />
	
	    <RadioButton
	        android:id="@+id/RadioButton04"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/fontsize"
	        android:layout_toLeftOf="@+id/RadioButton05"
	        android:text="25" />

	</RadioGroup>
    
</RelativeLayout>